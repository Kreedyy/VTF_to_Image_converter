<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="VTF_to_Image_converter.MainWindow"
        Title="VTF to Image converter">
	<StackPanel>
		<Grid Height="200" RowDefinitions="*,*,*">
			<Grid Background="Black">
				<Button Click="OpenFile" Content="Upload images or VTFs" Margin="0,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
			</Grid>
			
			<Grid Background="Black" ColumnDefinitions="*,*" Grid.Row="1">
				<!--https://developer.valvesoftware.com/wiki/VTF_(Valve_Texture_Format)-->
				<StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" ToolTip.Placement="Top" ToolTip.VerticalOffset="-10" ToolTip.Tip="https://developer.valvesoftware.com/wiki/VTF_(Valve_Texture_Format)">
					<ComboBox Name="FormatDropdown" SelectedIndex="0">
						<ComboBoxItem>RGBA8888</ComboBoxItem>
						<ComboBoxItem>ABGR8888</ComboBoxItem>
						<ComboBoxItem>ARGB8888</ComboBoxItem>
						<ComboBoxItem>BGRA8888</ComboBoxItem>
						<ComboBoxItem>DXT1</ComboBoxItem>
						<ComboBoxItem>DXT3</ComboBoxItem>
						<ComboBoxItem>DXT5</ComboBoxItem>
						<ComboBoxItem>RGBA16161616F</ComboBoxItem>
						<ComboBoxItem>RGBA16161616</ComboBoxItem>
					</ComboBox>
				</StackPanel>
				<CheckBox Name="AspectRatioCheckbox" VerticalAlignment="Center" IsChecked="true" HorizontalAlignment="Center" Grid.Column="1">Maintain aspect ratio</CheckBox>
			</Grid>
			
			<Grid Background="Black" Grid.Row="2">
				<Button Click="ConvertFiles" Content="Convert" Margin="0,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
			</Grid>
		</Grid>
	</StackPanel>
</Window>
