<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="VTF_to_Image_converter.MainWindow"
        Title="VTF to Image converter">
	<StackPanel>
	<Grid Background="Black" Height="50">
		<Button Click="OpenFile" Content="Upload images" Margin="0,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
	</Grid>
	<Grid Background="Red" Height="50" ColumnDefinitions="*,*"> <!--https://developer.valvesoftware.com/wiki/VTF_(Valve_Texture_Format)-->
		<StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
			<ComboBox SelectedIndex="0">
				<ComboBoxItem>RGBA8888</ComboBoxItem>
				<ComboBoxItem>ABGR8888</ComboBoxItem>
				<ComboBoxItem>ARGB8888</ComboBoxItem>
				<ComboBoxItem>BGRA8888</ComboBoxItem>
				<ComboBoxItem>DXT1</ComboBoxItem>
				<ComboBoxItem>DXT3</ComboBoxItem>
				<ComboBoxItem>DXT5</ComboBoxItem>
				<ComboBoxItem>RGBA16161616F</ComboBoxItem>
				<ComboBoxItem>RGBA16161616</ComboBoxItem>
			</ComboBox>
		</StackPanel>
		<CheckBox VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="1">Resize to nearest power of 2</CheckBox>
	</Grid>
	</StackPanel>
</Window>
